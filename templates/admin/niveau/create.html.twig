{% extends 'base.html.twig' %}

{% block title %}Créer un niveau{% endblock %}

{% block content %}
<div class="bg-white p-6 rounded shadow-md">
    <h1 class="text-xl font-bold mb-4">Créer un nouveau niveau</h1>
    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.nom, 'Nom du niveau', {'label_attr': {'class': 'block font-bold'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'border rounded w-full p-2'}}) }}
            {{ form_errors(form.nom) }}
        </div>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Créer</button>
    {{ form_end(form) }}
</div>
{% endblock %}
